# --- front controller de SIGMA ---
DirectoryIndex index.html
RewriteEngine On

# Sirve archivos y directorios reales tal cual (css, js, imgs, fuentes, etc.)
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Todo lo dem√°s entra por index.php (ruteo de la app)
RewriteRule ^ index.html [L]